{
  "name": "mypetcare-functions",
  "version": "1.0.0",
  "description": "Cloud Functions for MY PET CARE",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "deploy": "firebase deploy --only functions",
    "deploy:cron": "firebase deploy --only functions:cleanupExpiredLocks",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "18"
  },
  "dependencies": {
    "firebase-admin": "^12.6.0",
    "firebase-functions": "^5.1.1"
  },
  "devDependencies": {
    "typescript": "^5.6.3",
    "@types/node": "^22.7.4"
  }
}
